<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/telaprog"
    android:baselineAligned="false">




    <include android:id="@+id/menuPrincipal"
        layout="@layout/menuprincipal">
    </include>

    <include android:id="@+id/menuPrincipal"
        layout="@layout/menuprogamacao">
    </include>

    <TextView
        android:text="Escolha um equipamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:textColor="@color/corTexto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_casadejuvenalgaleno"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton6"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_arquivopublico"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton5"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_cineteatrosaoluiz"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton7"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_toRightOf="@+id/imageButton6"
        android:layout_toEndOf="@+id/imageButton6"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_dragaodomar"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton8"
        android:layout_below="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_marginTop="10dp" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_drjoselourenco"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton9"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_escoladeartes"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton10"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_alignLeft="@+id/imageButton7"
        android:layout_alignStart="@+id/imageButton7" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_museudoceara"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton11"
        android:layout_below="@+id/imageButton8"
        android:layout_alignLeft="@+id/imageButton8"
        android:layout_alignStart="@+id/imageButton8"
        android:layout_marginTop="10dp" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_portoiracemadasartes"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton12"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_alignLeft="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton9" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/espaco_teatrojosedealencar"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton13"
        android:layout_alignTop="@+id/imageButton12"
        android:layout_alignLeft="@+id/imageButton10"
        android:layout_alignStart="@+id/imageButton10" />




    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:id="@+id/menu"
        android:background="@color/corMenu"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignTop="@+id/menu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/btnProg"
            android:background="@mipmap/ic_menu_prog"
            android:scaleType="fitCenter"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_margin="20dp"
            android:onClick="chamaTelaProg"
            android:backgroundTint="@color/corDestaque"
            />


        <ImageButton
            android:contentDescription="@string/app_name"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btnCheck"
            android:scaleType="fitCenter"
            android:background="@mipmap/ic_menu_check"
            android:layout_margin="20dp"
            android:onClick="chamaTelaCheck"/>



        <ImageButton
            android:contentDescription="@string/app_name"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btnPrincipal"
            android:background="@mipmap/ic_menu_home"
            android:scaleType="fitCenter"
            android:layout_margin="20dp"
            android:onClick="chamaTelaPrincipal"/>

        <ImageButton
            android:contentDescription="@string/app_name"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btnRadar"
            android:background="@mipmap/ic_menu_radar"
            android:scaleType="fitCenter"
            android:layout_margin="20dp"
            android:onClick="chamaTelaRadar"/>



        <ImageButton
            android:contentDescription="@string/app_name"
            android:id="@+id/btnConfig"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:background="@mipmap/ic_menu_config"
            android:scaleType="fitCenter"
            android:layout_margin="20dp"
            android:onClick="chamaTelaConfig"/>

    </LinearLayout>


</RelativeLayout>
